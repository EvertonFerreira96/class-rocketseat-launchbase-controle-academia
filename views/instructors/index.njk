{% extends "layout.njk" %}


{% block head %}
    <title>Gym Manager</title> 
    <link rel="stylesheet" type="text/css" href="/instructors.css" >
{% endblock %}


{% block content %}
  <div class="card table-container">
    <a type="link" href="/instructors/create">Novo Instrutor</a>
    <table class="list-instructors">
      <thead>
        <tr>
          <th>Instructor</th>
          <th>Atendimento</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        {% for instructor in instructors %}
        <tr>
          <td>
            <span
              style="background-image:url({{instructor.avatarUrl}})">
            </span>
          {{instructor.name}}</td>
          <td>
            
            {% for service in instructor.services.split(',') %}
             <span>{{service}}</span>
             {% endfor %}
          </td>
          <td>
            <a href="/instructors/{{instructor.id}}">ver</a>
          </td>
        </tr>
        {% endfor %} 
      </tbody>
    </table>
  </div>
{% endblock content %}